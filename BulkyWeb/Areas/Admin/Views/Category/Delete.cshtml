            </div>

            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6">
                    <a class="btn btn-secondary form-control" asp-controller="Product" asp-action="Index">Back to Product</a>
                </div>
            </div>

        </form>
        
    </div>
</div>


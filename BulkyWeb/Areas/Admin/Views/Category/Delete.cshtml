@{
    ViewData["Title"] = "Edit";
}

@model Category
<div class="container">
    <h2>Delete Product</h2>
    <div class="row ">
        <form method="post">
            @* <div asp-validation-summary="All"></div> *@
            <div class="mb-3 row pt-1">
                <label class="" asp-for="Name"></label>
                <input type="text" class="form-control" disabled asp-for="Name" />
                @* <span asp-validation-for="Name"></span> *@
            </div>
            <div class="mb-3 row pt-1">
                <label class="" asp-for="DisplayOrder"></label>
                <input type="text" class="form-control" disabled asp-for="DisplayOrder" />

@model List<Product>
<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-dark ">
                <i class="bi bi-plus-circle pe-2"></i>Create New Product List
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
        <th>
            Product Name
        </th>
       
        <th>
            Category
        </th>
                <th>
                    Author
                </th>
                <th>
                    Description
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    List Price
                </th>
                <th>
                    Price for 1-50
                </th>
                <th>
                    Price for 50+
                </th>
                <th>
                    Price for 100+
                </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model)
        { <tr>
            <td>@list.Title
            </td>
                    <td>@list.CategoryId</td>
             <td>@list.Author</td>
             <td>@list.Description</td>
            <td>@list.ISBN</td>
            <td>@list.ListPrice</td>
            <td>@list.Price</td>
            <td>@list.Price50</td>
            <td>@list.Price100</td>
             <td>
            <div class="btn-group w-75" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id ="@list.Id" class="btn btn-dark mx-2">
                            <i class="bi bi-pencil p-2"></i>Edit
                        </a>
                   
                   
                        <a asp-controller="Product" asp-action="Delete" asp-route-Id ="@list.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-archive p-2"></i>Delete
                        </a>
    </div>
                    </td>
                    
            </tr>
        }
    </tbody>
</table>
</div>
